{
    "name": "model-edge-exporter",
    "version": "1.0.0",
    "description": "根据模型文件生成GLB格式的线框文件",
    "main": "build.js",
    "scripts": {
        "build:linux": "pkg --targets node18-linux-x64 --output dist/model-edge-exporter-linux .",
        "build": "node build.js",
        "pkg": "pkg . --out-path=dist --targets=node18-win-x64"
    },
    "bin": "main.js",
    "pkg": {
        "scripts": "src/**/*.js",
        "assets": [
            "assets/**/*",
            "node_modules/sql.js/dist/sql-wasm.wasm",
            "node_modules/@bokuweb/zstd-wasm/dist/zstd-wasm.wasm"
        ],
        "output": "dist/model-edge-exporter.exe"
    },
    "dependencies": {
        "@bokuweb/zstd-wasm": "^0.0.27",
        "@toondepauw/node-zstd": "^1.2.0",
        "sql.js": "^1.13.0",
        "three": "^0.177.0",
        "zstd-codec": "^0.1.5"
    },
    "devDependencies": {
        "pkg": "^5.8.1"
    }
}
